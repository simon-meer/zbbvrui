{
  "build": {
    "beforeDevCommand": "bun run start",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/zbbvrui/browser"
  },
  "package": {
    "productName": "zbbvrui",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "scope": [
          {
            "name": "srcpy",
            "cmd": "$RESOURCE/scrcpy/scrcpy.exe",
            "args": true
          }
        ]
      },
      "fs": {
        "scope": ["$RESOURCE/scrcpy/*"]
      }
    },
    "windows": [
      {
        "title": "zbbvrui",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ch.sbb.xr.launcher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "scrcpy/*"
      ]
    }
  }
}
